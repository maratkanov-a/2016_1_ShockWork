<fest:template xmlns:fest="http://fest.mail.ru">
    <fest:include src="./input_field_template.xml"/>
    <div id="login" class="row">
        <div class="col s12 m6 offset-m3">
            <nav class="nav">
                <div class="nav-wrapper">
                    <a class="brand-logo center">Войти</a>
                    <ul class="left hide-on-med-and-down">
                        <li>
                            <a class="js-go-back waves-effect waves-light btn">Назад</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

        <div class="col s12 m6 offset-m3">
              <div class="card-panel">
                  <form class="form">
                      <fest:get name="form__input">
                        <fest:params>
                            {
                                id: "username",
                                label: "Username",
                                type: "text",
                                icon: "perm_identity"
                            }
                        </fest:params>
                    </fest:get>
                    <fest:get name="form__input">
                        <fest:params>
                            {
                                id: "password",
                                label: "Password",
                                type: "password",
                                icon: "lock_open"
                            }
                        </fest:params>
                    </fest:get>
                      <div class="form__error form__login__error">
                        Unknown username/password
                      </div>
                    <div>
                        <input class="js-submit waves-effect waves-light btn" type="submit"></input>
                    </div>
                  </form>
              </div>
        </div>
    </div>
</fest:template>
